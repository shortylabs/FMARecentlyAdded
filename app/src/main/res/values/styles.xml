<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar.Solid.FMARecentlyAdded</item>
    </style>

    <style name="ForecastTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.FMARecentlyAdded.NoTitle</item>
    </style>

    <style name="ActionBar.Solid.FMARecentlyAdded" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/selected_track_background</item>
    </style>

    <style name="ActionBar.Solid.FMARecentlyAdded.NoTitle" parent="@style/ActionBar.Solid.FMARecentlyAdded">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/ic_launcher</item>
    </style>

</resources>
